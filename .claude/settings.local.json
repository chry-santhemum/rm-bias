{
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(python -m ruff check:*)",
      "Bash(source:*)",
      "Bash(python:*)",
      "Bash(rg:*)",
      "Bash(mkdir:*)",
      "Bash(uv run:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "Edit(*)",
      "Write(*)",
      "MultiEdit(*)",
      "Read(*)",
      "Glob(*)",
      "Grep(*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(nvidia-smi:*)",
      "Bash(nvcc:*)",
      "Bash(mv:*)",
      "Read(//workspace/caller/src/caller/**)",
      "Read(//workspace/caller/**)",
      "Bash(cat:*)",
      "Bash(python3:*)",
      "Bash(done)",
      "Bash(timeout 10 python3:*)",
      "WebSearch",
      "WebFetch(domain:sbert.net)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "mcp__ide__getDiagnostics",
      "Bash(timeout 30 python3:*)",
      "Bash(echo:*)",
      "Bash(timeout 60 python3:*)",
      "Bash(timeout 120 python3:*)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(rm -f:*)",
      "Bash(rmdir:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "orchestra-mcp"
  ],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/bell.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/bell.sh"
          }
        ]
      }
    ]
  }
}
